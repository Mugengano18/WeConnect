<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <RelativeLayout
        android:id="@+id/up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/log"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pat">

            <Button
                android:id="@+id/patient"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_marginRight="128dp"
                android:background="@drawable/counsellor"
                android:text="Patient"
                android:textColor="@color/colorTextIcons" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/patient"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="0dp"
                android:padding="10dp"
                android:text="User/Patient"
                android:textSize="20sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pat"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/specailist"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="128dp"
                android:layout_marginRight="128dp"
                android:layout_marginBottom="80dp"
                android:adjustViewBounds="true"
                android:background="@drawable/rehab"
                android:scaleType="centerInside"
                android:text="Specialist counselor"
                android:textColor="@color/colorTextIcons" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>